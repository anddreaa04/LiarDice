<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ognos.jordi.comparador.Comparador">


    <Button
        android:id="@+id/btn_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:onClick="num_a"
        android:text="@string/btn_a" />

    <Button
        android:id="@+id/btn_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_a"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:onClick="num_b"
        android:text="@string/btn_b" />

    <TextView
        android:id="@+id/txt_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_a"
        android:layout_alignLeft="@+id/btn_a"
        android:layout_alignStart="@+id/btn_a"
        android:layout_marginBottom="79dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/txt_a"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_a"
        android:layout_alignLeft="@+id/btn_b"
        android:layout_alignStart="@+id/btn_b"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/txt_b"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:elevation="1dp"
        android:text="@string/txt_ganador"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_comparar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/btn_a"
        android:layout_toRightOf="@+id/btn_a"
        android:onClick="compare"
        android:text="@string/compara" />
</RelativeLayout>
